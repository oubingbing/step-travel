.container{
  display: flex;
  flex-direction: column;
}

.user-container{
  width: 100%;
  display: flex;
  flex-direction: column;
  height: 200rpx;
  background: #1296DB;
}

.user-container .user-info{
  width: 95%;
  display: flex;
  flex-direction: row;
}

.user-info .user{
  width: 50%;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.user .user-image{
  border-radius: 70rpx;
}

.user-info image{
  width: 130rpx;
  height: 130rpx;
  border-style:solid;
  border-width:5rpx;
  border-color: white;
}

.step-log{
  width: 50%;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  color: white;
}

.container .header{
  display: flex;
  flex-direction: column;
  width: 100%;
  align-items: center;
  background: white;
  padding-bottom: 50rpx;
  padding-top: 50rpx;
  color:#1296DB;
}

.header .header-content{
  width: 95%;
  display: flex;
  flex-direction: column;
}

.header-content .step-content{
  width: 100%;
  display: flex;
  flex-direction: row;
}

/** 内容样式 **/
.step-content .today-step{
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-right-style:solid;
  border-width:1rpx;
  border-color: #CCCCCC;
}

.step-content .total-step{
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.step-content .step{
  font-size: 50rpx;
}

.content-container{
  width: 100%;
  display: flex;
  flex-direction: column;
  background: white;
  align-items: center;
  margin-top: 5rpx;
}

.content-container .content{
  width: 95%;
  display: flex;
  flex-direction: column;
}

.content-container .item{
  width: 100%;
  display: flex;
  flex-direction: row;
}

.item .left{
  width: 25%;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  display: flex;
  flex-direction: column;
  border-right-style:solid;
  border-width:1rpx;
  border-color: #CCCCCC;
  justify-content: center;
}


.left .date{
  position: absolute;
  left: 120rpx;
  background: #1296DB;
  color: white;
  font-size: 25rpx;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
  border-radius: 10rpx;
}

.item .right{
  padding-left: 300rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  text-align: center;
}

.right .step-number{
  font-size: 40rpx;
  width: 100%;
  border-bottom-style:solid;
  border-width:1rpx;
  border-color: #CCCCCC;
  color: #1296DB;
}

/** 授权按钮 **/
.auth-container{
  position: fixed;
  z-index: 200;
  width: 100%;
  height: 100%;
  background: gray;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background:rgba(2,2,2,0.8);
}

.auth-button{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background: #66CDAA;
  width: 50%;
  color: white;
  font-size: 35rpx;
}

.auth-button .auth-image-container{
  display: flex;
  flex-direction: column;
}

.auth-button image{
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}