.container{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.container .container-content{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.container-content .item{
  width: 95%;
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}

.item .header{
  width: 100%;
  display: flex;
  flex-direction: column;
  background: #CCCCCC;
  color: white;
  justify-content: center;
  align-items: center;
  border-top-right-radius: 10rpx;
  border-top-left-radius: 10rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}

.header image{
  width: 35rpx;
  height: 35rpx;
}

.item .body{
  width: 100%;
  display: flex;
  flex-direction: column;
  background: #E6E6E6;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  justify-content: center;
  align-items: center;
}

.body-content{
  width: 95%;
  display: flex;
  flex-direction: row;
  padding-bottom: 30rpx;
  padding-top: 30rpx;
  flex-wrap: wrap;
}

.body .body-teim{
  margin-bottom: 10rpx;
  margin-top: 10rpx;
  margin-right: 10rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  background: white;
  border-radius: 5rpx;
  color: gray;
  font-size: 30rpx;
}


/** 加载更多 **/
.get-more{
  height: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  font-size: 30rpx;
  font-weight: 200;
  width: 100%;
  background: white;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.get-more image{
  width: 40rpx;
  height: 40rpx;
}

.get-more .get-more-item{
  display: flex;
  flex-direction: row;
}

.loading{
  margin-left: 15rpx;
}